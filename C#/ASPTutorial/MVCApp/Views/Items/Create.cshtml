@model MVCApp.Models.Item

@{
    ViewData["Title"] = "Create";
}

<div class="container text-center">
    <h2>Create Item</h2>
    
    <form asp-action="Edit" method="post" class="d-grid gap-3">
        <div class="form-group">
            <label for="Name" class="form-label">Name</label>
            <input asp-for="Name" type="text" id="Name" class="form-control" placeholder="Enter Item Name" />
        </div>
        <div class="form-group">
            <label for="Price" class="form-label">Price</label>
            <input asp-for="Price" type="number" id="Price" class="form-control" placeholder="Enter Item Price" />
        </div>
        
        <button type="submit" class="btn btn-primary">Create Item</button>
    </form>
</div>