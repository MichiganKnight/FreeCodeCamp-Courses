@model List<Train_Tracker.Areas.MetraTracker.Models.TripModel>

@using Microsoft.AspNetCore.Mvc.ModelBinding
@using Train_Tracker.Areas.MetraTracker.Models
@{
    ViewBag.Title = "Metra Tracker - Trips";
}

<div class="container text-center">
    <h2>Metra Tracker - Trips</h2>
    
    <form asp-area="MetraTracker" asp-controller="Trip" asp-action="RouteTrip" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Fetch Metra Trips</button>
    </form>
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (ModelError err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@err.ErrorMessage</div>
            }
        </div>
    }
    
    @if (Model is { Count: > 0 })
    {
        <div class="mt-3">
            <h5 class="text-primary">Active Metra Trips</h5>
            <table class="table table-striped table-bordered table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>Route ID</th>
                        <th>Trip ID</th>
                        <th>Trip Headsign</th>
                        <th>Shape ID</th>
                        <th>Direction ID</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (TripModel trip in Model)
                    {
                        <tr>
                            <td>@trip.RouteID</td>
                            <td>@trip.TripID</td>
                            <td>@trip.TripHeadsign</td>
                            <td>
                                @(trip.ShapeID?.Contains("IB") == true ? "Inbound" : trip.ShapeID?.Contains("OB") == true ? "Outbound" : "")
                            </td>
                            <td>@trip.DirectionID</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (ViewBag.Requested == true)
    {
        <div class="mt-3 alert-danger">No Trips Found</div>
    }
</div>