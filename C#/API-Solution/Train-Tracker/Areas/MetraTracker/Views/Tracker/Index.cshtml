@model List<Train_Tracker.Areas.MetraTracker.Models.RouteModel>

@using Microsoft.AspNetCore.Mvc.ModelBinding
@using Train_Tracker.Areas.MetraTracker.Models
@{
    ViewBag.Title = "Metra Tracker";
}

<div class="container text-center">
    <h2>Metra Tracker</h2>
    
    <form asp-area="MetraTracker" asp-controller="Tracker" asp-action="Index" method="post">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Fetch Metra Routes</button>
    </form>
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (ModelError err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@err.ErrorMessage</div>
            }
        </div>
    }
    
    @if (Model is { Count: > 0 })
    {
        <div class="mt-3">
            <h5 class="text-primary">Active Metra Routes</h5>
            <table class="table table-striped table-bordered table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>Route ID</th>
                        <th>Route Short Name</th>
                        <th>Route Long Name</th>
                        <th>Route Color</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (RouteModel route in Model)
                    {
                        <tr>
                            <td style="color:@(route.RouteID == "UP-N" ? "inherit" : "#" + route.RouteColor)">
                                @route.RouteID
                            </td>
                            <td style="color:@(route.RouteID == "UP-N" ? "inherit" : "#" + route.RouteColor)">
                                @route.RouteShortName
                            </td>
                            <td style="color:@(route.RouteID == "UP-N" ? "inherit" : "#" + route.RouteColor)">
                                @route.RouteLongName
                            </td>
                            <td style="color:@(route.RouteID == "UP-N" ? "inherit" : "#" + route.RouteColor)">
                                #@route.RouteColor
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (ViewBag.Requested == true)
    {
        <div class="mt-3 alert-danger">No Routes Found</div>
    }
</div>