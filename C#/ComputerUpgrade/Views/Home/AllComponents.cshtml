@using ComputerUpgrade.Classes
@{
    ViewData["Title"] = "All Components";
}

<div class="container text-center">
    <h1>All Components</h1>

    <table class="table table-striped table-bordered table-rounded table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Store</th>
                    <th>Price</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    @foreach (Component component in ComputerUpgrade.Classes.Component.AllComponents.Where(c => c.Type is not ("Keyboard" and "Mouse" and "Headset")))
                    {
                        <tr>
                            <td>
                                @{
                                    if (ComputerUpgrade.Classes.Component.AllUrlMap.TryGetValue(component.Name ?? "", out string? url))
                                    {
                                        <a href="@url">@component.Name</a>
                                    }
                                    else
                                    {
                                        @component.Name
                                    }
                                }
                            </td>
                            <td>@component.Type</td>
                            <td>@component.Store</td>
                            <td class="fw-semibold">@component.Price.ToString("C")</td>
                            <td>
                                <img src="@Url.Content(component.Image)" alt="@component.Name" class="img-fluid rounded" width="150" height="150" />
                            </td>
                        </tr>
                    }
                </tr>

                <tr>
                    <td></td>
                    <td></td>
                    <td class="fw-semibold">Total Price</td>
                    <td class="fw-semibold">@ComputerUpgrade.Classes.Component.CalculateTotalPrice("All").ToString("C")</td>
                    <td></td>
                </tr>
            </tbody>
        </table>
</div>