@model IEnumerable<FinanceApplication.Models.Expense>

<div class="container text-center">
    <h2>My Expenses</h2>
    
    <table class="table table-striped table-bordered table-hover" style="width:100%">
        <thead>
            <tr>
                <th>Description</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Expense item in Model)
            {
                <tr>
                    <td>@item.Description</td>
                    <td>$@item.Amount</td>
                    <td>@item.Category</td>
                    <td>@item.Date.ToString("MM/dd/yyyy")</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-primary" asp-area="" asp-controller="Expenses" asp-action="Create">Add Expense</a>

    <h2>Expenses Overview</h2>
    <div class="d-flex justify-content-center">
        <div style="max-width: 450px; width: 450px;">
            <canvas id="myChart"></canvas>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const ctx = document.getElementById('myChart');
    
    fetch('/Expenses/GetChart/').then(response => response.json()).then(data => {
        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: data.map(d => d.category),
                datasets: [{
                    data: data.map(d => d.total)
                }]
            }
        });
    });
</script>