<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Media Slideshow</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body {
                background-color: #121212;
                color: white;
                overflow-x: hidden;
            }

            .carousel-item img,
            .carousel-item video {
                max-height: 70vh;
                object-fit: contain;
            }

            .nav-buttons {
                text-align: center;
                margin-top: 20px;
            }

            .nav-buttons button {
                margin: 0 10px;
                font-size: 1.2rem;
                padding: 8px 20px;
                border-radius: 8px;
                border: none;
                background-color: #007bff;
                color: white;
                transition: 0.3s;
            }

            .nav-buttons button:hover {
                background-color: #0056b3;
            }
        </style>
    </head>
    <body>
        <div class="container-fluid p-4">
            <h2 class="text-center">Media Slideshow</h2>

            <div class="text-center mt-2">
                <button id="selectFolder" onclick="browseFolder()" class="btn btn-success">Select Folder</button>
            </div>

            <% if (images.length > 0) { %>
                <div class="section">
                    <% if (images.length > 0) { %>
                        <h3 class="text-center mb-3 mt-2">Images</h3>
                        <div id="imageCarousel" class="carousel slide" data-bs-ride="false">
                            <div class="carousel-inner">
                                <% images.forEach((img, i) => { %>
                                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                                        <img src="/media/<%= img %>" class="d-block w-100"/>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>

                    <div class="nav-buttons">
                        <button id="prevImage">Previous</button>
                        <button id="nextImage">Next</button>
                    </div>
                </div>
            <% } %>

            <% if (videos.length > 0) { %>
                <div class="section">
                    <% if (videos.length > 0) { %>
                        <h3 class="text-center mb-3 mt-2">Videos</h3>
                        <div id="videoCarousel" class="carousel slide" data-bs-ride="false">
                            <div class="carousel-inner">
                                <% videos.forEach((vid, i) => { %>
                                    <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                                        <video src="/media/<%= vid %>" class="d-block w-100" controls></video>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>

                    <div class="nav-buttons">
                        <button id="prevVideo">Previous</button>
                        <button id="nextVideo">Next</button>
                    </div>
                </div>
            <% } %>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script>
            const {ipcRenderer, remote} = require("electron");

            function setupCarousel(id, prevBtn, nextBtn) {
                const element = document.getElementById(id);
                if (!element) return;
                const carousel = new bootstrap.Carousel(element, { interval: false });
                document.getElementById(prevBtn)?.addEventListener("click", () => carousel.prev());
                document.getElementById(nextBtn)?.addEventListener("click", () => carousel.next());
            }

            setupCarousel("imageCarousel", "prevImage", "nextImage");
            setupCarousel("videoCarousel", "prevVideo", "nextVideo");

            async function browseFolder() {
                const folderPath = await ipcRenderer.invoke("select-folder");
                if (!folderPath) return;

                const form = document.createElement("form");
                form.method = "POST";
                form.action = "/set-folder";

                const input = document.createElement("input");
                input.type = "hidden";
                input.name = "folderPath";
                input.value = folderPath;

                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        </script>
    </body>
</html>
